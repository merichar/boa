<% if can?(:update, @task) %>
  <%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :due_at %>
    <%= f.input :display_duration %>
    <%= f.input :completed_by_id %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :task_status_id %>
    <%= f.input :task_category, :as => :select, :label => "Task Category", :collection => TaskCategory.all.map{|tc| [tc.name, tc.id] } %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
    </div>
  <% end %>
  
<% else %>
  <h3>Not Authorized!</h3>
<% end %>
