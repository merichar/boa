<% if can?(:read, @task) %>
  <%- model_class = Task -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
  </div>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:due_at) %>:</strong></dt>
    <dd><%= @task.due_at %></dd>
    <dt><strong><%= model_class.human_attribute_name(:display_duration) %>:</strong></dt>
    <dd><%= @task.display_duration %></dd>
    <dt><strong><%= model_class.human_attribute_name(:completed_by_id) %>:</strong></dt>
    <dd><%= @task.completed_by_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @task.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @task.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:task_status) %>:</strong></dt>
    <dd><%= @task.task_status.name %></dd>
  </dl>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn' %>

    <% if can?(:update, @task) %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn' %>
    <% end %>

    <% if can?(:destroy, @task) %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
    <% end %>
  </div>
  
<% else %>
  <h3>Not Authorized!</h3>
<% end %>
