<% end %>



<% unless @faqs.empty? %>
	<p><em><strong>Frequently Asked Questions matching term '<%= @query %>'</strong></em></p>
	<ul>
		<% for faq in @faqs do %>
			<li><%= link_to faq.question, faq_path(faq) %><br> <%= "#{faq.answer}" %></li>
		<% end %>
	</ul>
	<p class="supertiny">&nbsp;</p>
<% end %>