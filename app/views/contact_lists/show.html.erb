<% if can?(:read, :contact_list) %>
  <%- model_class = ContactList -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
  </div>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:participant_id) %>:</strong></dt>
    <dd><%= @contact_list.participant_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:display_contact) %>:</strong></dt>
    <dd><%= @contact_list.display_contact %></dd>
  </dl>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
              contact_lists_path, :class => 'btn'  %>
    <% if can?(:update, :contact_list) %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_list_path(@contact_list), :class => 'btn' %>
    <% end %>

    <% if can?(:destroy, :contact_list) %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_list_path(@contact_list),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
    <% end %>
  </div>
  
<% else %>
  <h3>Not Authorized!</h3>
<% end %>
