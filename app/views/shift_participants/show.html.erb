<%- model_class = ShiftParticipant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:shift) %>:</strong></dt>
  <dd><%= @shift_participant.shift.shift_type.name + " @ "+ @shift_participant.shift.starts_at.strftime("%b %e at %l:%M %p") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:participant) %>:</strong></dt>
  <dd><%= @shift_participant.participant.andrewid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clocked_in_at) %>:</strong></dt>
  <dd><%= @shift_participant.clocked_in_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clocked_out_at) %>:</strong></dt>
  <dd><%= @shift_participant.clocked_out_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shift_participants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shift_participant_path(@shift_participant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shift_participant_path(@shift_participant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
