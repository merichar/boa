<% if can?(:read, @document) %>
  <div class="page-header">
    <h1><%= @document.name %></h1>
  </div>
  <iframe src=<%= @document_url_path %> width="100%" height ="500px">
    <p>Placeholder text; only shows up if the page DOESN'T render!</p>
  </iframe>
  <br>
    <div class="form-actions">
      <%= link_to t('.show', :default => t("helpers.links.show")),
              @document_url_path, :class => 'btn', :target => "_blank" %>
      <%= link_to t('.back', :default => t("helpers.links.back")),
              documents_path, :class => 'btn' %>
      <% if can?(:edit, @document) %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_path(@document), :class => 'btn' %>
      <% end %>
      <% if can?(:destroy, @document) %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_path(@document),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      <% end %>
    </div>
  <% else %>
    <h3>Not Authorized!</h3>
  <% end %>