<%- model_class = Participant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:andrewid) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= "Signed Waiver?" %></th>
      <th><%= "Signed Hard Hat Waiver?" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @participants.each do |participant| %>
      <tr>
<!--    <td><%= link_to participant.id, participant_path(participant) %></td>-->        
        <td><%= link_to participant.andrewid, participant_path(participant) %></td>
        <td><%= "(" + participant.phone_number[0,3]+") "+participant.phone_number[3,3]+"-"+participant.phone_number[6,4] %></td>
        <td><%= "#{(participant.has_signed_waiver)? "Yes" : "No"}" %></td>
        <td><%= "#{(participant.has_signed_hardhat_waiver)? "Yes" : "No"}" %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_participant_path(participant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      participant_path(participant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_participant_path,
            :class => 'btn btn-primary' %>
