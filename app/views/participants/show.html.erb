<% if can?(:read, :participant) %>

  <%- model_class = Participant -%>
  <div class="page-header">
    <h1><%=t '.title', :default => @participant.andrewid %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:andrewid) %>:</strong></dt>
    <dd><%= @participant.andrewid %></dd>

    <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
    <dd><%= "(" + @participant.phone_number[0,3]+") "+@participant.phone_number[3,3]+"-"+@participant.phone_number[6,4] %></dd>
    
    <dt><strong><%= model_class.human_attribute_name(:memberships) %>:</strong></dt>
    <dd><% @memberships.each do |membership| %><li><%= link_to membership.organization.name, membership.organization %></li><% end %></dd>


    <dt><strong><%= model_class.human_attribute_name(:has_signed_waiver) %>:</strong></dt>
    <dd><%= @participant.has_signed_waiver %></dd>


    <dt><strong><%= model_class.human_attribute_name(:has_signed_hardhat_waiver) %>:</strong></dt>
    <dd><%= @participant.has_signed_hardhat_waiver %></dd>
  </dl>


  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                participants_path, :class => 'btn'  %>
    
    <% if can?(:update, :participant) %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_participant_path(@participant), :class => 'btn' %>
    <% end %>

    <% if can?(:destroy, :participant) %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                participant_path(@participant),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
    <% end %>
    
  </div>

<% else %>
  <h3>Not Authorized!</h3>
<% end %>