<% if can?(:update, @faq) %>
  <%= simple_form_for @faq, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :question %>
    <%= f.input :answer %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                faqs_path, :class => 'btn' %>
    </div>
  <% end %>
  
<% else %>
  <h3>Not Authorized!</h3>
<% end %>
