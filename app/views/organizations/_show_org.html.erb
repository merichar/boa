
<h1><%= @organization.name %></h1>
<h3>Category: <%= @organization.organization_category.name %></h3>


<h3>Booth Chairs</h3>
<div id="chairs">
  <%= render :partial => 'participants/organization_booth_chair_list', :object => @booth_chairs %>
</div>

<h3>Tools Checked Out - <%= link_to_function "Toggle", "$('#tools').toggle()" %></h3>
<div id="tools" style="display: none;">
  <%= render :partial => "tools/organization_tool_list", :object => @tools %>
</div>


<h3>Members - <%= link_to_function "Toggle", "$('#members').toggle(); $('#organization_participant_list').dataTable();" %></h3>
<div id="members" style="display: none;">
  <%= render :partial => 'participants/participant_list', :object => @members %>
</div>

<h3>Charges - <%= link_to_function "Toggle", "$('#charges').toggle()" %></h3>
<div id="charges" style="display: none;">
  <%= render :partial => "charges/organization_charge_list", :object => @charges %>
</div>

<h3>Shifts - <%= link_to_function "Toggle", "$('#shifts').toggle()" %></h3>
<div id="shifts" style="display: none;">
  <%= render :partial => "shifts/shift_table.html.erb", :object => @shifts %>
</div>

<h3>Hardhats - <%= link_to_function "Toggle", "$('#hardhats').toggle()" %></h3>
<div id="hardhats" style="display: none;">
  <%= render :partial => "tools/organization_tool_list", :object => @hardhats %>
</div>