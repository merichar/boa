<% if can?([:create, :update], :charge) %>
  <%= simple_form_for @charge, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :organization_id %>
    <%= f.input :charge_type_id %>
    <%= f.input :amount %>
    <%= f.input :description %>
    <%= f.input :issuing_participant_id %>
    <%= f.input :receiving_participant_id %>
    <%= f.input :charged_at %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                charges_path, :class => 'btn' %>
    </div>
  <% end %>

  <% else %>
    <h3>Not Authorized!</h3>
<% end %>
