<%- model_class = Charge -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:organization_id) %>:</strong></dt>
  <dd><%= @charge.organization_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:charge_type_id) %>:</strong></dt>
  <dd><%= @charge.charge_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @charge.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @charge.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:issuing_participant_id) %>:</strong></dt>
  <dd><%= @charge.issuing_participant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receiving_participant_id) %>:</strong></dt>
  <dd><%= @charge.receiving_participant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:charged_at) %>:</strong></dt>
  <dd><%= @charge.charged_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              charges_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_charge_path(@charge), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              charge_path(@charge),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
